<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddPhotoFragment">

    <Button
        android:id="@+id/btnFotosec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="foto seç"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405" />

    <Button
        android:id="@+id/btnYukle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yükle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="222dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698">

        <CheckBox
            android:id="@+id/label_manzara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="manzara" />

        <CheckBox
            android:id="@+id/label_yazilim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="yazılım" />

        <CheckBox
            android:id="@+id/label_spor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="spor" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="179dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_menu_gallery"
        app:layout_constraintBottom_toTopOf="@+id/btnFotosec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.717" />

</androidx.constraintlayout.widget.ConstraintLayout>